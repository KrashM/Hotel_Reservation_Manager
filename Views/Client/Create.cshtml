@model Hotel_Reservation_Manager.Models.Data.Client

<body>
    <div class="text-center">
        <h1 class="display-4">Create client</h1>
        <form class="login" asp-controller="Clients" asp-action="Create">
            <div class="form-group">
                <input asp-for="Name" type="text" class="form-control" id="name" placeholder="Name">
            </div>
            <div class="form-group">
                <input asp-for="SurName" type="text" class="form-control" id="surname" placeholder="SurName">
            </div>
            <div class="form-group">
                <input asp-for="PhoneNumber" type="text" class="form-control" id="phone" placeholder="0888888888">
            </div>
            <div class="form-group">
                <input asp-for="Email" type="email" class="form-control" id="email" placeholder="youremail@example.com">
            </div>
            <a>Adult</a>
            <div class="form-group">
                <input asp-for="Adult" type="checkbox" id="adult" value="true">
            </div>
            <button type="submit">Submit</button>
        </form>
    </div>
</body>