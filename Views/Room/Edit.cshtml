@model Hotel_Reservation_Manager.Models.Data.Room

@{
    System.Guid room_id = Model.Id;
}

<body>
    <div class="text-center">
        <h1 class="display-4">Edit room</h1>
    </div>
    <div class="login">
        <form class="login" asp-controller="Rooms" asp-action="EditRoom">
            <div class="form-group">
                <input asp-for="Number" type="number" class="form-control" id="number" placeholder=@Model.Number>
            </div>
            <div class="form-group">
                <input asp-for="Capacity" type="number" class="form-control" id="cap" placeholder=@Model.Capacity>
            </div>
            <div class="form-group">
                <select asp-for="Type" class="form-control" id="Type" placeholder=@Model.Type>
                    <option value="Single">Single bed</option>
                    <option value="Two">Two bed</option>
                    <option value="Mesaunet">Mesaunet</option>
                    <option value="Appartment">Appartment</option>
                </select>
            </div>
            <div class="form-group">
                <input asp-for="PriceForBedAdult" type="number" class="form-control" id="price_ad" placeholder=@Model.PriceForBedAdult>
            </div>
            <div class="form-group">
                <input asp-for="PriceForBedAdult" type="number" class="form-control" id="price_ad" placeholder=@Model.PriceForBedChild>
            </div>
            <input type="hidden" asp-for="Id" value=@room_id>
            <button type="submit">Submit</button>
        </form>
    </div>
</body>